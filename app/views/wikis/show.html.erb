<h1><%= markdown_to_html @wiki.title %></h1>

<br />
<div class="row">
  <div class="col-md-8">
    <p><%= markdown_to_html @wiki.body %></p>
  </div>
  <div class="col-md-4">
    <% if policy(@wiki).edit? %>
      <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
      <%= link_to "Add or Remove Collaborators", wiki_collaborators_path(@wiki), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>

   



